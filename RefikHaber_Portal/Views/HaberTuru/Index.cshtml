@model List<HaberTuru>
  
<div class="container">
    <div class="row pt-3 pb-4"
        <div>
            <h1>Kategoriler</h1>
        </div>
</div>

    <table class="table table-striped table-dark">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Kategori
            </th>
            <th
            </th>
            <th>
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach(var haberTuru in Model)
        {
            <tr>
                <td>@haberTuru.Id</td>
                <td>@haberTuru.Ad</td>
                    <td>
                        <a asp-controller="HaberTuru" asp-action="Guncelle" asp-route-id="@haberTuru.Id" type="button " class="btn btn-success">Güncelle</a>
                    </td>
                    <td>
                        <a asp-controller="HaberTuru" asp-action="Sil" asp-route-id="@haberTuru.Id" type="button " class="btn btn-danger">Sil</a>
                    </td>
            </tr>
        }
        
    </tbody>
</table>

    <div class="row pt-3 pb-2">
        <div>
            <a asp-controller="HaberTuru" asp-action="Ekle" class="btn btn-lg btn-primary" type="button">
                Yeni Kategori Oluştur
            </a>
        </div>
    </div>

</div>
<script>
    function showAlert(message) {
        Swal.fire({
            title: 'Başarılı!',
            text: message,
            icon: 'success',
            timer: 2000,
            showConfirmButton: true,
            confirmButtonText: 'Tamam'
        });
    }

    var basariliMesaj = @Html.Raw(Json.Serialize(@TempData["basarili"]));

    if (basariliMesaj) {
        showAlert(basariliMesaj);
    }
</script>